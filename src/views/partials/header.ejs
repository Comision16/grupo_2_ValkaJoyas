<header>
  <div class="text-superior">
    <p>APROVECHA 3 6 Y 12 CUOTAS SIN INTERESES SELECCIONANDO MERCADO PAGO</p>
  </div>
  <div class="barra-menu">
    <i class="fas fa-bars"></i>
    <div class="contenedor-logos">
      <div class="logo1">
        <a href="/"> <img src="/images/Logo_Valka.png" alt="" /></a>
      </div>
      <div class="logo2">
        <a href="/"><img src="/images/Logo_Valka2.png" alt="" /></a>
      </div>
    </div>
    <nav>
      <ul>
        <li>novedades</li>
        <li>joyas</li>
        <li>sale 30%</li>
        <li>regalos</li>
      </ul>
    </nav>
    <div class="buscador">
      <form action="/search" id="formKeywords" method="GET">
        <div class="contenedor-input">
          <input type="text" id="keywords" name="keywords" placeholder="Buscar" />
          <small id="msgErr-keywords" class="ms-2 text-danger"></small>
          <button type="submit" class="buscar">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </form>
    </div>
    <div class="iconos-top">
      <% if (!locals.userLogin) { %>
        <a href="/users/login"><i class="far fa-user"></i></a>
        <a href=""><i class="far fa-heart"></i></a>
      <% }else { %>
        <% if (userLogin.rol === 1) { %>
        
          <br>
          <a href="/users/profile">Bienvenid@<%= userLogin.name %>!</a>
          <a href="/admin"><i class="fas fa-cogs"></i></a>  
          <a href="/users/logout"><i class="fas fa-sign-out-alt"></i></a>
               
        <% }else { %>
          <a href="/users/profile">Bienvenid@ <%= userLogin.name %>!  </a>
          <a href=""><i class="far fa-heart"></i></a>
          <button id="btn-cart" type="button" class="btn btn-transparent text-white position-relative me-3" style="padding: 0%;" data-bs-toggle="modal" data-bs-target="#exampleModal">
            <i class="fas fa-shopping-cart"></i>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-dark" id="show-count-cart" hidden>
            </span>
          </button>
          <!-- CARRITO -->
          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content bg-transparent border-0">
                <div class="">
                  <section class="carrito_resumen">
                    <h1>Mi Compra</h1>
                    <button class="bg-transparent border-0 text-white"  data-bs-dismiss="modal">Seguir comprando</button>
                </section>
                </div>
                <div class="">
                  <section>
                   
                    <article class="carrito_producto"  id="cart-body">
                      <div class="d-flex flex-column align-items-center">
                        <figure style="width: 100px;">
                          <img src="/images/prod1.jpg" class="img-fluid">
                        </figure>
                        <figcaption>
                          Pendiente de Diamantes
                        </figcaption>
                      </div>
                      
                        <div>
                          <small>precio:</small>
                          <p> $6.000,00</p>
                        </div>

                          <div class="carrito_producto_cantidad">

                            <button><i class="fas fa-minus"></i></button>
                            <h5>10</h5>
                            <button><i class="fas fa-plus"></i></button>

                        </div>
                       
                        <div class="carrito_producto_subtotal">
                          <small>subtotal</small>
                          <p>
                            $6.000,00
                          </p>
                          </div>
                       
                    </article>
                </section>
                <section class="">
                  <div class="carrito_compra_cuadro">
                      <div class="carrito_compra_total">
                          <p>TOTAL A PAGAR</p>
                          <b>$6.000,00</b>
                      </div>
                  </div>
                  <div class="d-flex justify-content-between mt-3">
                    <button class="carrito_compra_pagar">Vaciar carrito</button>
                    <button class="carrito_compra_pagar">Proceder al Pago</button>
                  </div>
                  
              </section>
                </div>
            
              </div>
            </div>
          </div>
          <a href="/users/logout"><i class="fas fa-sign-out-alt"></i></a>
        <% }%>
      <% }%>
        
    </div>
  </div>
  
  <!-- <script src="/javascripts/search.js"></script> -->
</header>
